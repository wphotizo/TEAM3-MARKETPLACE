@model MarketPlace_DAL.tblUser
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_site.cshtml";
}

@{
    var data = ViewBag;

}


<div class="body-content btn-sign-up pull-right" id="holder-sign-up"><span id="btn-signup">Sign Up</span></div>
<div>
    @using (Html.BeginForm("Authenticate", "Login", FormMethod.Post))
    {
        <span style="color:red; font-style:italic">@data.message</span>
        <div class="input-group">
            <input type="text" class="form-control" name="email" placeholder="Email">
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-user"></i></span>
            </div>
        </div>
        <span style="color:red; font-style:italic">@Html.ValidationMessageFor(m => m.email)</span>
        <div class="input-group" style="margin-top:10px">
            <input type="password" class="form-control" name="password" placeholder="Password">
            <div class="input-group-append">
                <span class="input-group-text"><i class="fa fa-lock"></i></span>
            </div>
        </div>
        <span style="color:red; font-style:italic">@Html.ValidationMessageFor(x => x.password)</span>

        <div class="" style="margin-top:10px">
            <button type="submit" class="btn btn-primary pull-right">Login</button>
        </div>
    }
</div>


<!-- Modal -->

<div class="modal fade" id="signUpModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Register as User</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("Save", "Login", FormMethod.Post, new
                {
                    enctype = "multipart/form-data"
                })) {
                    

                    <div class="form-group row">
                        <div class="col-sm-4">
                            &nbsp;
                        </div>
                        <div class="col-sm-8" style="text-align:center">

                            <span style="text-align:center;font-weight:bold">Image Preview</span>
                        </div>
                    </div>

                <div class="form-group row">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-8">

                        <div style="margin:auto; width:100px"><img id="previewImg" height="100" width="100" class="rounded-circle" src="@Url.Content("~/Images/sample.png")" alt="Profile pic" /></div>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-8" style="text-align:center">

                        <span style="text-align:center;font-weight:bold">Your Profile Pic</span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-4">
                        &nbsp;
                    </div>
                    <div class="col-sm-8">
                        <input type="file" onchange="previewFile(this)" class="form-control" name="file">
                    </div>
                </div>


                <div class="form-group row">
                    <label for="username" class="col-sm-4 col-form-label">Username:</label>
                    <div class="col-sm-8">
                        <input type="text" required class="form-control" placeholder="Username" name="username" id="username">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="email" class="col-sm-4 col-form-label">Email Address:</label>
                    <div class="col-sm-8">
                        <input type="email" required name="email" placeholder="Email ID" class="form-control" id="email">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="password" class="col-sm-4 col-form-label">Password:</label>
                    <div class="col-sm-8">
                        <input type="password" name="password" placeholder="Password" required class="form-control" id="password">
                    </div>
                </div>

                <div class="form-group row">
                    <label for="confirmpassword" class="col-sm-4 col-form-label">Confirm Password:</label>
                    <div class="col-sm-8">
                        <input type="password" placeholder="Confirm Password" class="form-control" id="confirmpassword">
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" id="btn-sign-up">Sign up</button>
                </div>

                }
            </div>

        </div>
    </div>
</div>

<script>
    function previewFile(input) {
        var file = $("input[type=file]").get(0).files[0];
        

        if (file) {
            var reader = new FileReader();

            reader.onload = function () {
                $("#previewImg").attr("src", reader.result);
            }

            reader.readAsDataURL(file);
        }
    }
</script>
<!-- end of modal -->
